<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AboutMe">
    <ImageView
        android:id="@+id/about1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/aboutme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:id="@+id/about2"
    android:layout_below="@+id/about1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/aboutme2"
    android:layout_centerHorizontal="true"
    />

    <ImageView
        android:layout_below="@+id/about2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/aboutme3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>