<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Quizes.Quiz3">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مامعنى could ؟"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/chosen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="بواسطة"
        android:onClick="choose"
        />
    <Button
        android:id="@+id/chosen2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosen1"
        android:text="يوم"
        android:onClick="choose"
        />
    <Button
        android:id="@+id/chosen3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosen2"
        android:text="يستطيع"
        android:onClick="choose"
        />
    <Button
        android:id="@+id/chosen4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosen3"
        android:text="استطاع"
        android:onClick="choose"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="30dp"
        android:layout_below="@id/chosen4"
        />
    <TextView
        android:text="3/20"
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="30dp"
        android:layout_below="@id/result"
        />
    <com.google.android.gms.ads.AdView
        android:layout_marginTop="30dp"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4722192482253222/2569672842">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>