<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeWords"
    >

<RelativeLayout
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:layout_alignParentLeft="true"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/standword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="الكلمة"
        android:textSize="30dp"
        android:textColor="#ffffff"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:textSize="5dp"
        android:background="#ffffff"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_below="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/word"
        android:layout_centerInParent="true"
        android:text="Word"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        />
</RelativeLayout>
<RelativeLayout
    android:id="@+id/r2"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="@color/colorPrimaryDark"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/standtranslate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="الترجمة"
            android:textSize="30dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line2"
            android:textSize="5dp"
            android:background="#ffffff"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_below="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/translate"
            android:layout_centerInParent="true"
            android:text="Word"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/r3"
        android:layout_below="@+id/r2"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/standspeak"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="النطق"
            android:textSize="30dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line3"
            android:textSize="5dp"
            android:background="#ffffff"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_below="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speak"
            android:layout_centerInParent="true"
            android:text="Word"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            />


    </RelativeLayout>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/sound"
        android:layout_below="@id/r3"
        android:layout_centerHorizontal="true"
        android:id="@+id/sound"
        android:onClick="soundWord"
        />

    <ImageView
        android:id="@+id/right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/sound"
        android:layout_alignParentRight="true"
        android:onClick="increseNumber"
        android:src="@drawable/right" />
    <ImageView
        android:id="@+id/left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/left"
        android:layout_below="@id/sound"
        android:layout_alignParentLeft="true"
        android:onClick="decreseNumber"
        />
    <com.google.android.gms.ads.AdView
        android:layout_marginTop="30dp"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4722192482253222/2569672842">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>